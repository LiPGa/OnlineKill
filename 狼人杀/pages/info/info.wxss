page {
  height: 100%;
  background: #eff3f8;
}
.index-top {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #2f3e75;
  height: 36%;
  justify-content: center;
}
.index-top image {
  width: 310rpx;
  height: 250rpx;
  border-radius: 100rpx;
  margin-bottom: 50rpx;
  margin-top: 50rpx;
}

.index-top text {
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}z
.stv-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.withAnimate {
  transition: all 100ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}
.stv-container .tab-bar {
  position: relative;
  display: flex;
  font-size: 30rpx;
  color: #666666;
}
.stv-container .tab-bar .tab-active {
  color: #2d80ff;
}
.stv-container .tab-bar .tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 16rpx;
  padding-bottom: 20rpx;
}
.stv-container .tab-bar .under-line {
  position: absolute;
  bottom: 0;
  height: 6rpx;
  background-color: #2d80ff;
}
.stv-container .scroll-view {
  position: relative;
  width: 100%;
  height: 100%;
  background: #e7eaef;
}
.stv-container .scroll-view .scroll-view-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
}
.stv-container .scroll-view .scroll-view-wrapper .one-scene {
  height: 100%;
}
.one-scene text {
  display: flex;
  justify-content: center;
  padding-top: 200rpx;
}
.Absolute-Center {  
  margin: auto;  
  position: absolute;  
  top: 0; left: 0; bottom: 0; right: 0;  
}  
.choose {
  position: relative;
  margin-top: 20rpx;
  color: #f6f6f6;
}

.choose view {
  font-weight: bold;
  font-size: 36rpx;
  position: absolute;
  left: 70%;
  top: 15%;
}

.choose image {
  width: 600rpx;
  height: 320rpx;
  border-radius: 10rpx;
}